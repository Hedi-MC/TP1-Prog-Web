@using TP2_Skyrim.Models


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";

}

<link rel="stylesheet" href="/css/stylesRecherche.css">
<main class="container-fluid grandContainer mw-50 overflow-hidden" style="background-color: rgba(0,0,0,.7); ">


        <h1>Les Classes</h1> <!--Titre Principal-->
  <div class="row justify-content-end">




        <div class="col-md-9 overflow-hidden" style="border: 50px; background-color: rgba(2, 3, 5, 0.507);">
        
        @{
            int orange2 = 0;
            List<Enfant> enfants = new List<Enfant>();

            foreach(Enfant ef in Model.Resultat)
            {
                enfants.Add(ef);
            }
        }
        

        @for(int i =0; i<enfants.Count(); i+=3)
        {

            
            
            
        <div class="row">
            <div class="col-md mainSubject p-2 mage">

              <a href="/Enfant/Detail/@enfants[i].EnfantId">
                <h1 style="margin-left: 15px;">@enfants[i].Nom @enfants[i].EnfantId     FIRST ONE</h1>

                <div class="img-text-container">
                  <img src="@enfants[i].ImageURL" alt="Le Mage"
                    class="col mainImages mageImg" style="width: 90%;">
                </div>
              </a> <!--MAGE-->
            </div> 

            <div class="col-md mainSubject p-2 mage">
            <a href="/Enfant/Detail/@enfants[i+1].EnfantId">
                <h1 style="margin-left: 15px;">@enfants[i+1].Nom @enfants[i+1].EnfantId     SECOND ONE</h1>
                <div class="img-text-container">
                  <img src="@enfants[i+1].ImageURL" alt="Le Mage"
                    class="col mainImages mageImg" style="width: 90%;">
                </div>
              </a> <!--MAGE-->
            </div> 

            <div class="col-md mainSubject p-2 mage">
            <a href="/Enfant/Detail/@enfants[i+2].EnfantId">
                <h1 style="margin-left: 15px;">@enfants[i+2].Nom @enfants[i+2].EnfantId     THIRD ONE</h1>
                <div class="img-text-container">
                  <img src="@enfants[i+2].ImageURL" alt="Le Mage"
                    class="col mainImages mageImg" style="width: 90%;">
                </div>
              </a> <!--MAGE-->
             </div> 
       
        </div>    
        }

        </div>
    
        
        <div class="col-md-2 h-auto colRecherche d-none d-md-block ">

          <h2 class="recherche" style="padding-top: 50px; padding-left: 10px;">
            RECHERCHER
          </h2>
          <form action="https://www.w3schools.com/action_page.php" method="POST">
                <input type="text" name="MotsCles">
            <h4 class="recherche" style="padding-top: 50px; width: 100%; ">Nombre de compétences</h4>
                <input type="number" style="max-width: 40%; " name="NbrCompMin"> <input type="number" class="text-end" style="max-width: 40%; margin-left: auto;" name="NbrCompMax">

            <h4 class="recherche" style="padding-top: 50px; ">habileté vedette</h4>
            <select id="choixBig" name="choix de l'habileté" style="width: 100%;">
              <option value="either">Peu importe</option>
              <option value="oui">Oui</option>
              <option value="non">Non</option>
            </select>
            <h4 class="recherche" style="padding-top: 50px; ">Classe</h4>
                <input type="radio" id="mageBig" name="EstMage" value="mage">
            <label for="mage">
              Mage
            </label><br>
                <input type="radio" id="fighterBig" name="EstGuerrier" value="guerrier">
            <label for="fighter">
              Guerrier
            </label><br>
                <input type="radio" id="thiefBig" name="EstVoleur" value="voleur">
            <label for="thief">
              Voleur
            </label>
            <br>
            <div class="d-md-none d-xxl-block">
              <button type="reset" class="bouton" style="background-color: grey; ">Effacer</button> <button
                type="submit" class="bouton"
                style="margin-left: 50px; background-color: cornflowerblue; "> Rechercher</button>
            </div>
            <div class=" d-md-block d-xxl-none">
              <button type="reset" class="bouton" style="background-color: grey; ">Effacer</button> <br>
              <button type="submit" class="bouton" style=" background-color: cornflowerblue;"> Rechercher</button>
            </div>


          </form>

           </div>

    

 </div>
    
</main>